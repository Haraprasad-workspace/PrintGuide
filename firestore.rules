rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- üè™ SHOPS COLLECTION ---
    match /shops/{shopId} {
      // Anyone logged in can see the list of shops
      allow read: if request.auth != null;
      
      // Only the shop owner can create or update their own shop details
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // --- üìÑ ORDERS COLLECTION ---
    match /orders/{orderId} {
      // 1. Read: Any logged-in user (Users need to see status, Shops need to see queue)
      allow read: if request.auth != null;

      // 2. Create: Any logged-in user (Users creating an order)
      allow create: if request.auth != null;

      // 3. Update: User (cancel) OR Shop Owner (update status)
      // Checks if the user ID matches either the 'userId' or 'shopId' on the document
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.userId || 
        request.auth.uid == resource.data.shopId
      );

      // ‚úÖ 4. DELETE: User OR Shop Owner
      // This is the fix for your "Missing Permissions" error.
      allow delete: if request.auth != null && (
        request.auth.uid == resource.data.userId || 
        request.auth.uid == resource.data.shopId
      );
    }

    // --- üë§ USERS COLLECTION ---
    match /users/{userId} {
      // Users can only read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}